#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run type checking
echo "ğŸ“ Type checking..."
npm run type-check

# Run linting
echo "ğŸ”§ Linting code..."
npm run lint

# Only run tests if explicitly requested
if [ "$RUN_TESTS_ON_COMMIT" = "true" ]; then
  echo "ğŸ§ª Running unit tests (requested via RUN_TESTS_ON_COMMIT)..."
  npm run test:ci
else
  echo "â­ï¸  Skipping unit tests (set RUN_TESTS_ON_COMMIT=true to enable)"
fi

# If everything passes, allow commit
echo "âœ… All checks passed! Proceeding with commit..."
